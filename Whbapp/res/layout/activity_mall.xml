<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8" >

    <include
        android:id="@+id/activity_mall_serchbar_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        layout="@layout/activity_mall_serchbar" />

    <ListView
        android:id="@+id/activity_mall_ListView"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/activity_mall_serchbar_include"
        android:layout_above="@+id/activity_mall_general_bottom_include" >
    </ListView>

    <include
        android:id="@+id/activity_mall_general_bottom_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/general_bottom" />

</RelativeLayout>